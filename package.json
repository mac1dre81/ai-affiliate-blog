{
  "name": "ai-affiliate-blog",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck",
    "test": "jest --passWithNoTests --runInBand",
    "e2e": "echo 'add playwright' && exit 0",
    "preview": "next start",
    "smoke": "node ./scripts/smoke-test.js",
    "automate": "npx tsx ./scripts/automate.ts",
    "build:full": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && tsc-alias -p tsconfig.cjs.json"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@sentry/integrations": "^7.114.0",
    "@sentry/nextjs": "^10.38.0",
    "@sentry/node": "^10.38.0",
    "@supabase/supabase-js": "^2.90.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.8.0",
    "cheerio": "^1.1.2",
    "date-fns": "^4.1.0",
    "dompurify": "^3.0.8",
    "dotenv": "^17.2.3",
    "error": "^10.4.0",
    "firebase": "^12.7.0",
    "ioredis": "^5.3.2",
    "mongodb": "^7.0.0",
    "mongoose": "^9.1.2",
    "next": "^16.1.6",
    "openai": "^5.23.2",
    "permissions": "^0.1.0",
    "pino": "^8.21.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "stripe": "^11.0.0",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.21.0",
    "@eslint/object-schema": "^2.1.6",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.11",
    "jest": "^29.7.0",
    "jsdom": "^23.0.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.7",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./server": {
      "import": "./dist/esm/server.js",
      "require": "./dist/cjs/server.js"
    }
  }
}
